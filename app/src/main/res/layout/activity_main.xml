<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8085c4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#0051ff"
            android:src="@drawable/people"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:gravity="left"
                android:layout_weight="2"
                android:layout_gravity="left"
                android:background="#01f7da"
                android:layout_marginEnd="10dp"
                android:src="@drawable/pp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:background="#3aea72"
                android:src="@drawable/go"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:background="#5c9bd6"
                android:layout_weight="2"
                android:layout_gravity="right"
                android:src="@drawable/trophy"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerInParent="true">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:gravity="left"
            android:layout_weight="2"
            android:layout_gravity="left"
            android:background="#ff7b00"
            android:layout_marginEnd="10dp"
            android:src="@drawable/factory"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:background="#ff04ff"
            android:src="@drawable/setting"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:background="#ff0044"
            android:layout_weight="2"
            android:layout_gravity="right"
            android:src="@drawable/tube"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#37ff00"
            android:src="@drawable/shop"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:background="#01f7e2"
            android:src="@drawable/help"/>
    </LinearLayout>

</RelativeLayout>